from browser import document, html, timer

CELL_SIZE = 40
WALL_THICKNESS = 6
IMG_PATH = "https://mde.tw/cp2025/reeborg/src/images/"

class World:
    """Represents the grid world, handling drawing of grid lines and boundary walls."""
    def __init__(self, width, height):
        self.width = width
        self.height = height
        self.layers = self._create_layers()
        self._init_html()
        self._draw_grid()
        self._draw_walls()
        
    def _create_layers(self):
        # Create canvases for different drawing layers (grid, walls, objects/trace, robots)
        w = self.width * CELL_SIZE
        h = self.height * CELL_SIZE
        return {
            "grid": html.CANVAS(width=w, height=h),
            "walls": html.CANVAS(width=w, height=h),
            "objects": html.CANVAS(width=w, height=h),
            "robots": html.CANVAS(width=w, height=h),
        }

    def _init_html(self):
        # Set up the HTML container for all layers
        container = html.DIV(style={
            "position": "relative",
            "width": f"{self.width * CELL_SIZE}px",
            "height": f"{self.height * CELL_SIZE}px"
        })
        # Position all canvases absolutely within the container
        for z, canvas in enumerate(self.layers.values()):
            canvas.style = {
                "position": "absolute",
                "top": "0px",
                "left": "0px",
                "zIndex": str(z)
            }
            container <= canvas
        # Clear and append the container to the target div
        document["brython_div1"].clear()
        document["brython_div1"] <= container
        
    def _draw_grid(self):
        # Draw the grid lines
        ctx = self.layers["grid"].getContext("2d")
        ctx.strokeStyle = "#cccccc"
        for i in range(self.width + 1):
            ctx.beginPath()
            ctx.moveTo(i * CELL_SIZE, 0)
            ctx.lineTo(i * CELL_SIZE, self.height * CELL_SIZE)
            ctx.stroke()
        for j in range(self.height + 1):
            ctx.beginPath()
            ctx.moveTo(0, j * CELL_SIZE)
            ctx.lineTo(self.width * CELL_SIZE, j * CELL_SIZE)
            ctx.stroke()

    def _draw_image(self, ctx, src, x, y, w, h, offset_x=0, offset_y=0):
        # Helper to draw an image asynchronously once loaded
        img = html.IMG()
        img.src = src
        def onload(evt):
            # Convert grid coordinates (x, y) to pixel coordinates
            # Note: Reeborg's world has (1,1) at bottom-left, canvas (0,0) at top-left.
            px = x * CELL_SIZE + offset_x
            py = (self.height - 1 - y) * CELL_SIZE + offset_y
            ctx.drawImage(img, px, py, w, h)
        img.bind("load", onload)
        
    def _draw_walls(self):
        # Draw the boundary walls on the outermost edges
        ctx = self.layers["walls"].getContext("2d")
        # Horizontal walls (North and South boundaries)
        for x in range(self.width):
            # North wall (top of the grid)
            self._draw_image(ctx, IMG_PATH + "north.png", x, self.height - 1,
                             CELL_SIZE, WALL_THICKNESS, offset_y=0)
            # South wall (bottom of the grid)
            self._draw_image(ctx, IMG_PATH + "north.png", x, 0,
                             CELL_SIZE, WALL_THICKNESS, offset_y=CELL_SIZE - WALL_THICKNESS)
        # Vertical walls (West and East boundaries)
        for y in range(self.height):
            # West wall (left of the grid)
            self._draw_image(ctx, IMG_PATH + "east.png", 0, y,
                             WALL_THICKNESS, CELL_SIZE, offset_x=0)
            # East wall (right of the grid)
            self._draw_image(ctx, IMG_PATH + "east.png", self.width - 1, y,
                             WALL_THICKNESS, CELL_SIZE, offset_x=CELL_SIZE - WALL_THICKNESS)

    # Initial robot placement (not animated) - kept for compatibility but not used in final run
    def robot(self, x, y):
        ctx = self.layers["robots"].getContext("2d")
        self._draw_image(ctx, IMG_PATH + "blue_robot_e.png", x - 1, y - 1,
                         CELL_SIZE, CELL_SIZE)

class AnimatedRobot:
    """Handles the robot's position, facing, animation, and command queue."""
    def __init__(self, world, x, y):
        self.world = world
        # Internal 0-indexed coordinates
        self.x = x - 1
        self.y = y - 1
        self.facing = "E"
        self.facing_order = ["E", "N", "W", "S"]
        self.robot_ctx = world.layers["robots"].getContext("2d")
        self.trace_ctx = world.layers["objects"].getContext("2d")
        self.queue = []
        self.running = False
        self._draw_robot()

    def _robot_image(self):
        # Get the correct image file name based on current facing direction
        return {
            "E": "blue_robot_e.png",
            "N": "blue_robot_n.png",
            "W": "blue_robot_w.png",
            "S": "blue_robot_s.png"
        }[self.facing]

    def _draw_robot(self):
        # Clear the robot canvas and redraw the robot at its current position
        self.robot_ctx.clearRect(0, 0, self.world.width * CELL_SIZE, self.world.height * CELL_SIZE)
        self.world._draw_image(self.robot_ctx, IMG_PATH + self._robot_image(),
                               self.x, self.y, CELL_SIZE, CELL_SIZE)

    def _draw_trace(self, from_x, from_y, to_x, to_y):
        # Draw a line between the previous and new cell centers
        ctx = self.trace_ctx
        ctx.strokeStyle = "#d33"
        ctx.lineWidth = 2
        ctx.beginPath()
        # Calculate pixel coordinates for cell centers
        fx = from_x * CELL_SIZE + CELL_SIZE / 2
        fy = (self.world.height - 1 - from_y) * CELL_SIZE + CELL_SIZE / 2
        tx = to_x * CELL_SIZE + CELL_SIZE / 2
        ty = (self.world.height - 1 - to_y) * CELL_SIZE + CELL_SIZE / 2
        ctx.moveTo(fx, fy)
        ctx.lineTo(tx, ty)
        ctx.stroke()

    def move(self, steps):
        """Adds a move command to the queue, animated step by step."""
        def action(next_done):
            def step():
                nonlocal steps
                if steps == 0:
                    next_done()
                    return
                    
                from_x, from_y = self.x, self.y
                dx, dy = 0, 0
                if self.facing == "E":
                    dx = 1
                elif self.facing == "W":
                    dx = -1
                elif self.facing == "N":
                    dy = 1
                elif self.facing == "S":
                    dy = -1
                    
                next_x = self.x + dx
                next_y = self.y + dy
            
                # Boundary check: stop if the next position is out of bounds
                if 0 <= next_x < self.world.width and 0 <= next_y < self.world.height:
                    self.x, self.y = next_x, next_y
                    self._draw_trace(from_x, from_y, self.x, self.y)
                    self._draw_robot()
                    steps -= 1
                    # Continue stepping after a short delay (200ms)
                    timer.set_timeout(step, 200)
                else:
                    print("üö® Â∑≤Á∂ìÊíûÁâÜÔºåÂÅúÊ≠¢ÁßªÂãïÔºÅ")
                    next_done()
            step()
        self.queue.append(action)
        self._run_queue()

    def turn_left(self):
        """Adds a turn_left command to the queue."""
        def action(done):
            idx = self.facing_order.index(self.facing)
            self.facing = self.facing_order[(idx + 1) % 4] # Rotate counter-clockwise (E->N->W->S->E)
            self._draw_robot()
            # Turn animation delay (300ms)
            timer.set_timeout(done, 300)
        self.queue.append(action)
        self._run_queue()

    def _run_queue(self):
        # Execute the next action in the queue if not already running
        if self.running or not self.queue:
            return
        self.running = True
        action = self.queue.pop(0)
        action(lambda: self._done()) # Pass a callback for when the action is finished

    def _done(self):
        # Callback when an action is finished
        self.running = False
        self._run_queue() # Try to run the next action

# --- Robot Execution Logic for Vertical Patrol ---

# Helper function to perform a right turn (3x left turns)
def turn_right(robot):
    """Performs a right turn (90 degrees clockwise)."""
    robot.turn_left()
    robot.turn_left()
    robot.turn_left()

# 1. Setup the world (10x10) and the robot at (1, 1)
w = World(10, 10)
r = AnimatedRobot(w, 1, 1) # Internal coords (0, 0)

# 2. Initial setup: Turn North (Up) to start the first sweep
r.turn_left() # E -> N

# 3. Main Patrol Loop (10 columns in total)
# We move 9 steps in each sweep (from 0 to 9, or 9 to 0)
for col in range(w.width):
    if col % 2 == 0:
        # Even column (0, 2, 4, ...): Move UP (North)
        r.move(9)

        if col < w.width - 1:
            # Transition phase (at top of grid): N -> E -> S
            turn_right(r) # N -> E
            r.move(1)     # Move 1 step East to next column
            turn_right(r) # E -> S (Ready for Down sweep)

    else:
        # Odd column (1, 3, 5, ...): Move DOWN (South)
        r.move(9)

        if col < w.width - 1:
            # Transition phase (at bottom of grid): S -> E -> N
            r.turn_left() # S -> E
            r.move(1)     # Move 1 step East to next column
            r.turn_left() # E -> N (Ready for Up sweep)

